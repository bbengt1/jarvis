# J.A.R.V.I.S. Configuration
# Copy this to .env and fill in your values

# General
NAME=Jarvis
WAKE_WORD=argus

# Whisper Speech Recognition
WHISPER__MODEL=base
WHISPER__LANGUAGE=en
WHISPER__DEVICE=auto

# =============================================================================
# LLM Configuration
# =============================================================================
# Provider: ollama, openai, anthropic, google, xai
LLM__PROVIDER=ollama

# Model name (provider-specific)
# Ollama: llama3.2, mistral, codellama, etc.
# OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo, etc.
# Anthropic: claude-sonnet-4-20250514, claude-3-5-haiku-20241022, etc.
# Google: gemini-1.5-flash, gemini-1.5-pro, gemini-2.0-flash, etc.
# xAI: grok-2-latest, grok-beta, etc.
LLM__MODEL=llama3.2

# Generation parameters
LLM__TEMPERATURE=0.7
LLM__MAX_TOKENS=1024

# Ollama settings (for local inference)
LLM__OLLAMA_BASE_URL=http://localhost:11434

# API Keys (set the one for your chosen provider)
LLM__OPENAI_API_KEY=
LLM__ANTHROPIC_API_KEY=
LLM__GOOGLE_API_KEY=
LLM__XAI_API_KEY=

# Optional: Custom API endpoints (for proxies or self-hosted)
# LLM__OPENAI_BASE_URL=https://api.openai.com/v1
# LLM__ANTHROPIC_BASE_URL=https://api.anthropic.com
# LLM__GOOGLE_BASE_URL=https://generativelanguage.googleapis.com/v1beta
# LLM__XAI_BASE_URL=https://api.x.ai/v1

# =============================================================================
# Text-to-Speech
# =============================================================================
TTS__VOICE=en_US-lessac-medium
TTS__SPEED=1.0

# =============================================================================
# Vision
# =============================================================================
VISION__MODEL=yolov8n
VISION__CAMERA_INDEX=0
VISION__CONFIDENCE_THRESHOLD=0.5

# =============================================================================
# Home Assistant
# =============================================================================
HOME_ASSISTANT__ENABLED=false
HOME_ASSISTANT__URL=http://homeassistant.local:8123
HOME_ASSISTANT__TOKEN=your_long_lived_access_token

# =============================================================================
# MQTT
# =============================================================================
MQTT__ENABLED=false
MQTT__HOST=localhost
MQTT__PORT=1883
MQTT__USERNAME=
MQTT__PASSWORD=

# =============================================================================
# ArgusAI Camera Integration
# =============================================================================
ARGUS_AI__ENABLED=false
ARGUS_AI__BASE_URL=http://localhost:8000/api/v1
ARGUS_AI__API_KEY=your_argus_ai_api_key
ARGUS_AI__WEBSOCKET_URL=ws://localhost:8000/ws

# =============================================================================
# Performance
# =============================================================================
USE_GPU=true
MAX_CONTEXT_MESSAGES=20
